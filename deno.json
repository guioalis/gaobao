{
  "tasks": {
    "start": "deno run --allow-net --allow-read --allow-env main.ts",
    "build": "deno compile --output dist/app --allow-net --allow-read --allow-env main.ts",
    "deploy": "deployctl deploy --project=miaoge-gaobao-78 --prod main.ts",
    "build:vuepress": "npm run docs:build",
    "deploy:all": "deno run --allow-run --allow-read --allow-write --allow-env --allow-net deploy.js"
  },
  "importMap": "import_map.json",
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window"]
  },
  "lint": {
    "files": {
      "include": ["**/*.js"]
    },
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "files": {
      "include": ["**/*.js"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": false
    }
  }
}